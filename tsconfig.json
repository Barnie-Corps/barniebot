{
    "compilerOptions": {
      "target": "es2022",
      "moduleDetection": "auto",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "ts-node": {
      "require": [
        "tsconfig-paths/register"
      ]
    }
  }